#!/user/bin/env groovy



pipeline {
    agent any

    stages {
        
        stage('Test') {
            steps {
              script {
               echo 'Testing..' 
              }  
                
            }
        }
        stage('Build') {
            steps {
                script {
                  echo 'Building..'
                }
              
            }
        }
        stage('Deploy') {
            steps {
                script {
                    def dockerCmd = 'docker run -p 3080:3080 -d shersi32/myapp:1'
                sshagent(['ec2-server']) {
                  sh "ssh -o StrictHostKeyChecking=no ec2-user@54.162.188.92 ${dockerCmd}"

                }
              }  
            }
        }
    }
}